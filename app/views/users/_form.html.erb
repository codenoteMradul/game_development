<h1>Enter Details For Sign Up</h1>

<div class = "errors_display">
<% if @user.errors.any? %>
	<% @user.errors.full_messages.find do |message| %>
		 <h3> <%= message %></h3>
	<% end %>
<% end %>
</div>

<br>

<%= form_with(model: @users, url: users_path) do |form| %>

<div class = "signup_form">
	<%= form.label :username %>
	<br>
	<%= form.text_area :username %>
</div>


<div class = "signup_form">
	<%= form.label :age %>
	<br>
	<%= form.text_area :age %>
</div>

<div class = "signup_form">
	<%= form.label :city %>
	<br>
	<%= form.text_area :city %>
</div>

<div class = "signup_form">
	<%= form.label :phone %>
	<br>
	<%= form.text_area :phone %>
</div>

<div class = "signup_form">
	<%= form.label :email %>
	<br>
	<%= form.text_area :email %>
</div>

<div class = "signup_form">
	<%= form.label :password %>
	<br>
	<%= form.text_area :password %>
</div>
<br>
<div>
	<%= form.submit "create account"%>
</div>

<% end %>
