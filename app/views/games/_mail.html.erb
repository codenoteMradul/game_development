<span class = "heading_mail">Invite Friends</span>

<div class = "alert">
<%= flash[:alert] %>
<%= flash[:notice] %>
</div>
<br>
<%= form_with(model: @invitations) do |form| %>
<div class = "mail">
	<%= form.text_area :email %>
</div>
<div class="submit">
	<%= form.submit "Send Invitation" %>
</div>
<% end %>